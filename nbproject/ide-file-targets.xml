<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." name="Battlecode 2015-IDE">
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/articles/freeform-config.html#compilesingle) -->
    <target name="compile-selected-files-in-teams">
        <fail unless="files">Must set property 'files'</fail>
        <mkdir dir="bin"/>
        <javac destdir="bin" includes="${files}" source="1.5" srcdir="teams">
            <classpath path="lib/battlecode-client.jar:lib/battlecode-player.jar:lib/battlecode-server.jar:lib/jogl.all.jar"/>
        </javac>
    </target>
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/articles/freeform-config.html#runsingle) -->
    <target name="run-selected-file-in-teams">
        <fail unless="run.class">Must set property 'run.class'</fail>
        <ant antfile="build.xml" inheritall="false" target="build"/>
        <java classname="${run.class}" failonerror="true" fork="true">
            <classpath>
                <pathelement path="lib/battlecode-client.jar:lib/battlecode-player.jar:lib/battlecode-server.jar:lib/jogl.all.jar"/>
                <pathelement location="bin"/>
            </classpath>
        </java>
    </target>
</project>
